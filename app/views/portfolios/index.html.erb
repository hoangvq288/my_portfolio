<h1>Portfolio Items</h1>
<%= link_to "Create new Portfolio", new_portfolio_path %>
<% @portfolio_items.each do |item| %>
  <p><%= item.title %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%= image_tag item.main_image unless item.main_image.blank? %>
  <%= image_tag item.thumb_image unless item.thumb_image.blank? %>
  <%= link_to "Edit", edit_portfolio_path(item) %>
  <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

